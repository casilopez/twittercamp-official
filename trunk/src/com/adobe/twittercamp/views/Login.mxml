	<mx:Metadata>
		[Event("login")]
	</mx:Metadata>
	<mx:Script>
		<![CDATA[
			import com.adobe.twittercamp.assets.flash.FlashAssets;
			
			public function get username():String
			{
				return usernameInput.text;
			}
			
			public function get password():String
			{
				return passwordInput.text;
			}
			
/* 			public function get timelineUsername():String
			{
				return timelineUsernameInput.text;
			} */
		]]>
	</mx:Script>
	<mx:Form id="loginForm" left="10" right="10" top="10" paddingTop="0" paddingLeft="0" paddingRight="0" paddingBottom="0">
		<mx:FormItem label="Username:">
			<mx:TextInput id="usernameInput"/>
		</mx:FormItem>
		<mx:FormItem label="Password:">
			<mx:TextInput id="passwordInput" displayAsPassword="true"/>
		</mx:FormItem>
<!--		<mx:Label text="Show timeline for another user:" />
		<mx:TextInput id="timelineUsernameInput" width="100%" />-->
	</mx:Form>
	<mx:Button bottom="10" right="10" label="Login" click="dispatchEvent( new Event('login') )"/>
